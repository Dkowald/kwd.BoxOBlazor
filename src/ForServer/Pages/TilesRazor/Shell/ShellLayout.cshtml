@{
    var title = ViewBag.Title ?? "Simple shell";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="~/" />

    <title>@title</title>

    <script src="~/_framework/blazor.server.js" defer></script>

    <link href="https://fonts.googleapis.com/css2?family=MuseoModerno&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <script src="https://kit.fontawesome.com/fabf6a7a00.js" crossorigin="anonymous"></script>

    <link href="/shell/shell.css" rel="stylesheet" type="text/css" />
    <script src="/shell/shell.js" type="text/javascript"></script>

    @await RenderSectionAsync("Head", false)
</head>
<body>
    <partial name="Shell/shellNav"/>
    <div class="shell">
        @RenderBody()
    </div>
</body>
</html>
